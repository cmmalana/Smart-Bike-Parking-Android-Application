<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_two_factor_auth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TwoFactorAuthActivity">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Two Factor Authentication"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/send_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEND CODE TO PHONE NUMBER"
        android:layout_below="@id/title_text_view"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"/>

    <Button
        android:id="@+id/send_to_email_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEND CODE TO EMAIL ADDRESS"
        android:layout_below="@id/send_code_button"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:drawablePadding="8dp"/>

    <EditText
        android:id="@+id/verification_code_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter verification code"
        android:layout_below="@id/send_to_email_button"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"/>

    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:layout_below="@id/verification_code_edit_text"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"/>

</RelativeLayout>
