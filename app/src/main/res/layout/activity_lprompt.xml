<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_thankyou"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThankyouActivity">

    <TextView
        android:id="@+id/thankyou_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Smart Bike Parking is Locked! Please wait for the LED to turn RED before leaving. Thank you!"
        android:textSize="24sp"
        android:layout_centerInParent="true"
        android:padding="16dp" />

    <Button
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thankyou_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Done"
        android:textSize="18sp" />

</RelativeLayout>
